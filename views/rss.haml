!!! XML
%rss{ :version => "2.0" }
    %channel
        %title= h @comics.title
        %link= url_for '/'
        %description= h @comics.about
        %language ru
        - @strips.each do |strip|
            %item
                %title= h strip.title
                %description= "&lt;img src='#{strip.image}' alt='#{h(strip.title)}' /&gt;"
                %link= url_for "/#{strip.id}"
                %guid= url_for "/#{strip.id}"
                %pubDate= strip.created_at.rfc822
